<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinnernote"
        android:layout_width="525dp"
        android:layout_height="66dp"
        android:layout_marginStart="172dp"
        android:entries="@array/un_a_5"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="576dp"
        android:layout_marginTop="136dp"
        android:text="@string/noterevue"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVCommentaires" />

    <EditText
        android:id="@+id/editTextREvue"
        android:layout_width="512dp"
        android:layout_height="90dp"
        android:layout_marginStart="108dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBaseline_toBaselineOf="@+id/textVCommentaires"
        app:layout_constraintStart_toEndOf="@+id/textVCommentaires" />

    <TextView
        android:id="@+id/textVCommentaires"
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:layout_marginStart="608dp"
        android:layout_marginTop="156dp"
        android:text="@string/revue"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVtitre" />

    <Button
        android:id="@+id/buttonphoto"
        android:layout_width="373dp"
        android:layout_height="118dp"
        android:backgroundTint="@color/orange"
        android:text="@string/photo"
        app:layout_constraintStart_toEndOf="@+id/photosoulier"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="445dp"
        android:layout_height="125dp"
        android:backgroundTint="@color/orange"
        android:text="@string/soumettre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textVtitre"
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:layout_marginStart="620dp"
        android:layout_marginTop="24dp"
        android:text="@string/titre"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photosoulier" />

    <EditText
        android:id="@+id/editTextTitre"
        android:layout_width="479dp"
        android:layout_height="116dp"
        android:layout_marginStart="96dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBaseline_toBaselineOf="@+id/textVtitre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toEndOf="@+id/textVtitre" />

    <ImageView
        android:id="@+id/photosoulier"
        android:layout_width="332dp"
        android:layout_height="309dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>
