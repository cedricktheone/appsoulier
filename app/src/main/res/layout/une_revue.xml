<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/textViewcomms"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/poubelle" />

    <ImageView
        android:id="@+id/imagesoulier"
        android:layout_width="77dp"
        android:layout_height="78dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/texttitre"
        android:layout_width="85dp"
        android:layout_height="26dp"
        android:text="@string/titre_lbl"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/imagesoulier"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewcomms"
        android:layout_width="197dp"
        android:layout_height="47dp"
        android:text="@string/commentaires"
        app:layout_constraintStart_toEndOf="@+id/imagesoulier"
        app:layout_constraintTop_toBottomOf="@+id/texttitre" />

    <TextView
        android:id="@+id/textViewnom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginBottom="7dp"
        android:text="@string/textview"
        app:layout_constraintBottom_toTopOf="@+id/textViewcomms"
        app:layout_constraintStart_toStartOf="@+id/texttitre" />

    <TextView
        android:id="@+id/note"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginBottom="56dp"
        android:text="@string/_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.693"
        app:layout_constraintStart_toEndOf="@+id/textViewcomms" />
</androidx.constraintlayout.widget.ConstraintLayout>
